# Network Configuration
network_hostname="ubuntu-server"
network_domain="local"
network_ip="192.168.1.100"
network_netmask="255.255.255.0"
network_netmask_cidr="24"  # Equivalent CIDR notation for the netmask
network_gateway="192.168.1.1"
network_dns="8.8.8.8,8.8.4.4"

# User Configuration
username="ubuntu"
userfullname="Ubuntu User"
# Generate encrypted passwords with: openssl passwd -6 -salt xyz YourPassword
userpassword_crypted='$6$xyz$ENCRYPTED_PASSWORD_HASH_HERE'
rootpassword_crypted='$6$xyz$ENCRYPTED_PASSWORD_HASH_HERE'

# SSH Keys (one per line)
ssh_authorized_key_1="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIP... user@example.com"
ssh_authorized_key_2="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIQ... user2@example.com" 
ssh_authorized_key_3=""
ssh_authorized_key_4=""

# Additional packages (comma separated)
packages="vim,curl,wget,htop"